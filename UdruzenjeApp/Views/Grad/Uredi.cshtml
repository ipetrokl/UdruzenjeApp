@model UdruzenjeApp.ViewModels.GradDodajVM


@{
    ViewData["Title"] = "uredi";
}

<h2>Edit Grada</h2>
<hr />

<div class="row">
    <div>
        <form asp-action="Snimi" asp-controller="Grad">

            <input type="hidden" value="@Model.GradID" name="GradID" class="form-control" />


            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrzavaID" class="control-label"></label>
                <select asp-for="DrzavaID" asp-items="Model.DrzavaStavke" class="form-control"></select>
            </div>


            <div class="form-group">
                <input type="submit" value="Snimi" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>