@model UdruzenjeApp.ViewModels.ClanDodajVM


@{
    ViewData["Title"] = "uredi";
}

<h2>Edit Clana</h2>
<hr />

<div class="col-md-8" style="background-color:beige;">
    <div >
        <form asp-action="Snimi" asp-controller="Clan">

            <input type="hidden" value="@Model.ClanId" name="ClanId" class="form-control" />


            <div class="form-group">
                <label asp-for="Ime" class="control-label"></label>
                <input asp-for="Ime" class="form-control" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Prezime" class="control-label"></label>
                <input asp-for="Prezime" class="form-control" />
                <span asp-validation-for="Prezime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumRodjenja" class="control-label"></label>
                <input asp-for="DatumRodjenja" class="form-control" />
                <span asp-validation-for="DatumRodjenja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrojTelefona" class="control-label"></label>
                <input asp-for="BrojTelefona" class="form-control" />
                <span asp-validation-for="BrojTelefona" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adresa" class="control-label"></label>
                <input asp-for="Adresa" class="form-control" />
                <span asp-validation-for="Adresa" class="text-danger"></span>
            </div>                   
            <div class="form-group">
                <label asp-for="GradID" class="control-label"></label>
                <select asp-for="GradID" asp-items="Model.GradStavke" class="form-control"></select>
            </div>
            @if (User.IsInRole("Admin"))
            {


            <div class="form-group">
                @if (Model.TipKorisnika == "Clan")
                {
                    <div class="row mb-3">

                      
                            <a asp-action="DodijelaRole" asp-route-KorisnikID="@Model.ClanId" class="btn btn-outline-danger mr-2"
                                         ajax-rezultat="nekiID" ajax-poziv="da">Dodijeli rolu "Admin"</a>
                     
                    </div>
                }
                @if (Model.TipKorisnika == "Admin" &&Model.ClanId!=1004)
                {
                    <div class="row mb-3">

                       
                            <a asp-action="UkloniRole" asp-route-KorisnikID="@Model.ClanId" class="btn btn-outline-danger mr-2"
                             ajax-rezultat="nekiID" ajax-poziv="da">Ukloni rolu "Admin"</a>
                    
                    </div>
                }

            </div>
            }
            
            <div class="form-group" style="margin-bottom:50px;">
                <input type="submit" value="Snimi" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>