@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2 style="margin-left:30%;">@ViewData["Title"]</h2>

<div class="row w-25" style="background-color:black;margin-left:30%;margin-bottom:10%; border:1px solid grey;border-radius:5px; color:white; padding:1%;">
    <div class="col-md-12">

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group ">
                <label asp-for="Input.Ime"></label>
                <input asp-for="Input.Ime" class="form-control " placeholder="Ime" />
                <span asp-validation-for="Input.Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Prezime"></label>
                <input asp-for="Input.Prezime" class="form-control" placeholder="Prezime" />
                <span asp-validation-for="Input.Prezime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.DatumRodjenja">Datum rođenja</label>
                <input type="date" asp-for="Input.DatumRodjenja" class="form-control" placeholder="Datum rođenja" />
                <span asp-validation-for="Input.DatumRodjenja" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-lg  btn-outline-success font-weight-bold ">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
